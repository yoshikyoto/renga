<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィールを見る", @user %></span>
      <span><%= @user.haikus.count %> 首</span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
	  <% @users.each do |user| %>
	    <%= link_to gravatar_for(user, size: 30), user %>
	  <% end %>
      <% end %>
    </section>
  </aside>

  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
	<%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
