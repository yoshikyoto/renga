<% provide(:title, 'Sign up') %>
<h1>ユーザー登録</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
    
      <%= f.label :name, "名前（ハンドルネーム）" %>
      <%= f.text_field :name %>
        
      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email %>
  
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
  
      <%= f.label :password_confirmation, "確認のためパスワードをもう一度入力してください" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "ユーザー登録！", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
